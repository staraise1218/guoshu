page {
    background: #F6F6F6;
}
.header {
    background-image: url("http://img.hb.aicdn.com/286e7f4fd1a8c2732277d4e60bc8f1613a7851ab1cbfe-BdktWx_fw658");
    background-size: cover;
    background-repeat: no-repeat;
    padding: 30rpx;
}
.news-icon {
    /* display: flex;
    justify-content: flex-end; */
}
.news_btn {
    border: none !important;
    display: flex;
    justify-content: flex-end;
}
.user-info {
    display: flex;
    justify-content: left;
    align-items: center;
    margin-top: 30rpx;
}
.user-name {
    margin-left: 25rpx;
    font-size: 32rpx;
    color: #fff;
}
.header-info {
    margin: 40rpx 0;
    display: flex;
    /* justify-content: space-around; */
    align-items: center
}
.info-item {
    position: relative;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
    padding: 0 50rpx;
    flex: 1
}
.info-item ._title {
    white-space: nowrap;
}
/* .info-item:last-child {
    border: none;
} */
.info-item::before {
    display: block;
    content: '';
    width: 4rpx;
    height: 40rpx;
    background: #fff;
    position: absolute;
    right: 1rpx;
    opacity: 0.5;
    top: 50%;
    transform: translateY(-50%);
}
.info-item:last-child::before {
    display: none;
}






.order {
    background: #fff;
}
.order-title {
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.order-list {
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.order-list-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    padding: 20rpx 0;
}
.order-list-title {
    line-height: 56rpx;
}
.serviceActive {
    color: #F64D48;
}

















