.my-header {
    background-image: url('https://app.zhuoyumall.com/wx/img/2/我的顶部背景.jpg');
    height: 430rpx;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    font-size: 30rpx;
}
.my-header .my-header-pic {
    position: absolute;
    top: 72rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 102rpx;
    height: 102rpx;
    border-radius: 50%;
    overflow: hidden;
}
.my-header .my-header-pic .header-pic {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.my-header .my-name {
    position: absolute;
    top: 210rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    align-items: center;
}
.my-header .my-header-wrap {
    position: absolute;
    top: 310rpx;
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.my-header .my-header-wrap .header-item {
    text-align: center;
    font-size: 26rpx;
    width: 200rpx;
}
.my-header .my-header-wrap .header-item view:last-child {
    margin-top: 10rpx;
}



.bg {
    background: #F5F5F5;
    padding: 20rpx;
}
.bg .my-item {
    background: #fff;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    padding: 30rpx 20rpx;
    color: rgba(0,0,0,.6);
    margin-bottom: 20rpx;
}
.bg .my-item view {
    margin-left: 20rpx;
}
.more {
    position: relative;
}
.more::before {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    content: '';
    width: 30rpx;
    height: 30rpx;
    display: block;
    background-image: url('https://app.zhuoyumall.com/wx/img/2/右箭头2.png');
    background-repeat: no-repeat;
    background-size: cover;
}
.blue {
    color: #5886ED !important;
}


.about-wrap {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 30rpx 50rpx;
}
.about-wrap .about-item {
    text-align: center;
    font-size: 30rpx;
    color: rgba(0,0,0,.8);
    width: 200rpx;
}

.shenqing_bg {
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,.5);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9;
}
.shenqing {
    width: 550rpx;
    background: #fff;
    border-radius: 15rpx;
    overflow: hidden;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
}
.shenqing .shenqing_title {
    background: #FB7F99;
    color: #fff;
    position: relative;
    height: 70rpx;
}
.shenqing .shenqing_title::before {
    content: '';
    display: block;
    width: 100%;
    height: 50rpx;
    background-image: url('https://app.zhuoyumall.com/wx/img/2/123.png');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    bottom: -50rpx;
    left: 0;
    position: absolute;
}
.shenqing .shenqing_title .content {
    left: 50%;
    position: absolute;
    top: 00rpx;
    transform: translate(-50%, 0);
    display: flex;
    align-items: center;
}
.shenqing .shenqing_title image {
    width: 100rpx;
    height: 100rpx;
}
.shenqing .shenqing_title view {
    margin-bottom: 15rpx;
}
.shenqing .con {
    margin-top: 60rpx;
    padding: 20rpx 20rpx;
    font-size: 32rpx;
    color: rgba(0,0,0,.9);
    text-align: center;
}
.shenqing .phone {
    padding: 0rpx 20rpx 60rpx 20rpx;
    font-size: 32rpx;
    color: rgba(0,0,0,.9);
    text-align: center;
}
.shenqing .shenqing_btn {
    text-align: center;
    padding: 20rpx 0;
    font-size: 34rpx;
    /* color: #FE3B64; */
}
.bb {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1rpx solid #222;
}
.bb view {
    flex: 1;
}
.bb button {
    flex: 1;
    border-radius: 0;
    border-left: 1rpx solid rgba(0,0,0,.9);
    background: #fff;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}