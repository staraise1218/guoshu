<!-- 我的服务 -->
<view class="order radius-30 margin-30">
    <view class="order-title title-3 font-weight-6 margin-30 padding-tb-20">我的服务</view>
    <view class="order-list">
        <block wx:for="{{serviceMsg}}" wx:key="item">
            <view class="order-list-item" bindtap="{{item.func}}">
