      <!-- shop -->
      <view class="shopListWrap">
        <scroll-view class="" scroll-x>
          <view class="scro-wrap">
            <block wx:for="{{grouplist}}" wx:key>

              <view class="scro-item" data-goodsid="{{item.goods_id}}" data-id="{{item.goods_id}}" bindtap="toCon">
