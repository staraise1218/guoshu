<view class="swiper-box">
    <view class="video-wrap" wx:if="{{videoShow && MP4}}">
        <video src="https://app.zhuoyumall.com:444{{MP4}}" muted="true" 
            show-mute-btn="true" 
            enable-play-gesture="true" 
            vslide-gesture="true" 
            object-fit="fill" 
            class="mp4"></video>
    </view>
    <swiper style='height:750rpx' wx:if="{{!videoShow}}"
        bindchange="change"
        class="slider-box"
        indicator-dots="{{dots}}"
        circular="true">
        <swiper-item wx:for="{{goodLists.goods_images_list}}" wx:if="{{goodLists.goods_images_list}}" wx:key>
        <image src="https://app.zhuoyumall.com:444{{item.image_url}}" class="slide-image" width="355" height="150" />
        </swiper-item>
    </swiper>
    <view class="btn-wrap" wx:if="{{MP4}}">
        <view bindtap="playVideo" class="video {{videoShow ? 'active' : ''}}">视频</view>
        <view bindtap="playImg" class="img {{videoShow ? '' : 'active'}}">图片</view>
    </view>
</view>



<!-- 团购价格区域 -->
<view class="group" wx:if="{{goodLists.prom_type != 0}}">
    <view class="left">
        <view wx:if="{{goodLists.prom_type == 1}}">秒杀价 ￥{{MSM.shop_price}}</view>
        <view wx:if="{{goodLists.prom_type == 2}}">团购价 ￥{{MSM.shop_price}}</view>
        <view class="tag-wrapper">
            <view class="del">原价￥{{goodLists.shop_price}}</view>
            <view class="tag">已拼{{MSM.virtual_num}}份</view>
        </view>
    </view>
    <view class="right">
        <view>距离结束还剩</view>
        <view class="time-wrapper">
            <view class="time-box">{{time.days}}</view>
            :
            <view class="time-box">{{time.hours}}</view>
            :
            <view class="time-box">{{time.minutes}}</view>
            :
            <view class="time-box">{{time.seconds}}</view>
        </view>
    </view>
</view>
<view class="padding-bottom-20" wx:if="{{goodLists.prom_type == 2}}">
    <view class="title-2 margin-left-30 margin-top-30">{{goodLists.goods_name}}</view>
    <view class="title-2_f margin-left-30 margin-top-10">{{goodLists.subtitle}}</view>
</view>
<!-- 团购价格区域 END -->
<!-- 非团购价格区域 -->
<view wx:if="{{goodLists.prom_type != 2}}">
    <view class="title-2 margin-left-30 margin-top-30">{{goodLists.goods_name}}</view>
    <view class="title-2_f margin-left-30 margin-top-10">{{goodLists.subtitle}}</view>
    <view class="flex-space_between margin-top-30 padding-lr-30">
        <view class="price">
            ￥{{goodLists.shop_price}}
            <view wx:if="{{goodLists.tag}}" class="tag font-size-18 margin-left-10">
                {{goodLists.tag}}
            </view>
        </view>
        <view wx-if="{{goodLists.sales_sum != 0}}" class="title-3_f">已售{{goodLists.sales_sum}}份</view>
    </view>
</view>
<!-- 非团购价格区域 END -->
