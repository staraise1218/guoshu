<view class="line margin-top-30"></view>
<!-- 精选评价 -->
<view class="pingjia padding-20" wx:if="{{goodsCommentList}}">
    <view class="title-2">精选评价</view>
    <view class="flex-space_between user-head">
        <view style="display:flex; align-items: center">
            <image class="icon-big" src="https://app.zhuoyumall.com:444{{goodsCommentList.head_pic}}" />
            <view class="user-name">{{goodsCommentList.nickname}}</view>
        </view>
        <view class="pingjia-con">
            <block wx:for="{{goodsCommentList.goods_rank}}" wx:key>
                <image class="icon-3" src="https://hbimg.huabanimg.com/5c1a19bc9a3ec64eb0af7bc66f11fd29225cf79550c-nxa9VV_fw658" />
            </block>
        </view>
    </view>
    <view class="pinglun-img-w" wx:if="{{goodsCommentList.img.length > 0}}">
        <block  wx:for="{{goodsCommentList.img}}">
            <image class="pinglun-icon" src="https://app.zhuoyumall.com:444{{item}}" /> 
        </block>
    </view>
    <view class="ping-text">{{goodsCommentList.content == 'undefined' ? '暂无评价' : goodsCommentList.content}}</view>
</view>
<!-- 推荐商品 -->
<view class="tuijian-bg">
    <view class="title margin-left-30 margin-bottom-30">推荐商品</view>
    <scroll-view scroll-x class="commodisyScro">
        <block wx:for="{{tuijian}}" wx:key>
        <!-- <block wx:for="{{toDayTuijian}}" wx:key> -->
            <view wx:if="{{item.store_count !=0}}" class="src-item" data-goodsid="{{item.goods_id}}">
                <view catchtap="go" data-id="{{item.goods_id}}">
                    <image class="poster" src="https://app.zhuoyumall.com:444{{item.original_img}}" />
                </view>
                <view class="title-2">{{item.goods_name}}</view>
                <view class="title-2_f">{{item.subtitle}}</view>
                <view class="title-2_f">
                    <view wx-if="{{item.virtual_num != 0}}">已购 {{item.virtual_num}} 份</view>
                </view>
                <view class="bottom">
                    <view class="price">￥{{item.shop_price}}</view>
                    <view data-goodsid="{{item.goods_id}}" catchtap="addShopCart">
                        <image src="https://hbimg.huabanimg.com/ff8af7f0827e85d34cc15b364ff139c61e6fe5bc5b3-0QRyv2_fw658" class="icon-2 shopCartIcon" />
                    </view>
                </view>
            </view>
        </block>
    </scroll-view>
</view>
<view class="title padding-30 margin-top-10">商品详情</view>
<rich-text nodes="{{html}}" catchtap="tap"></rich-text>
<!-- 购物车 -->
<view class="shopCart-wrap">
    <view class="schopCart" catchtap="toShopCart">
        <image class="icon-1 schop-icon" src="/src/img/gouwuche(2)@2x.png" />
        <view class="num" wx:if="{{num>0}}">{{num}}</view>
    </view>
    <view class="addCart" data-id="{{goods_id}}" catchtap="addcart">加入购物车</view>
    <view class="toPay" data-goodsid="{{goods_id}}" catchtap="{{byNowFlag == 'true' ? 'byNow' : ''}}">
        立即购买
    </view>
</view>




<view class="alert_back" wx:if="{{BackStatue}}">
    <view class="content">
        <image class="poster" src="https://app.zhuoyumall.com:444/wx/img/error.png" />
        <view class="">当前商品不在你所在的城市，{{backTime}}秒后回到首页.</view>
        <view class="btn" bindtap="goBack">返回首页</view>
    </view>
</view>




<!-- 弹窗 -->
<view class="my_alert_bg" wx:if="{{my_error_alert_show}}" bindtap="close_my_alert"></view>
<view class="my_alert" wx:if="{{my_error_alert_show}}">
    <view class="my_title">温馨提示</view>
    <view class="my_con">在您确定订单之前，请选择您的收货方式，我们提供了两种收货方式：门店自取和送货上门。</view>
    <view class="my_btn">
        <view class="my_cancel" bindtap="my_alert_cancel">门店自取</view>
        <view class="my_ok" bindtap="my_alert_ok">送货上门</view>
    </view>
</view>