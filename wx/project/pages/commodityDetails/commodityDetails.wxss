/* 团购价格区域 */
.group {
  display: flex;
  justify-content: space-between;
}
.group .left {
  flex: 1;
  padding: 20rpx 30rpx;
  background: #F35935;
  color: #fff;
}
.group .left .del {
  color: #fff;
}
.group .left .tag {
  border: 1rpx solid #fff;
  margin-left: 15rpx;
}
.group .left .tag-wrapper {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 20rpx;
}
.group .right {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 40rpx 20rpx 40rpx;
  background: #FFF0E1;
  font-size: 24rpx;
}
.group .right .time-wrapper {
  display: flex;
  justify-content: center;
  color: #3F3D40;
  align-items: center;
}
.group .right .time-wrapper .time-box {
  background: #3F3D40;
  color: #fff;
  border-radius: 8rpx;
  margin: 10rpx 10rpx 0 10rpx;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
}


.video-wrap {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #000;
}