page {
    padding-bottom: 100rpx;
}
.tab-item  {
    font-size: 28rpx;
}
.tab-item.tab-active {
    position: relative;
    color: #F93004;
}
.tab-item.tab-active::before {
    content: "";
    display: block;
    width: 100%;
    height: 5rpx;
    border-radius: 5rpx;
    background: #F93004;
    position: absolute;
    bottom: -100%;
}
.agein {
    padding: 5rpx 20rpx;
    border: 1rpx solid #222;
    border-radius: 50rpx;
}
.pingjia {
    padding: 5rpx 20rpx;
    border: 1rpx solid #F75330;
    border-radius: 50rpx;
    color: #F75330;
}


.tipsBox {
    position: fixed;
    bottom: 20rpx;
    left: 2.5%;
    width: 95%;
    display: flex;
    text-align: center;
    background: linear-gradient(#F67D61, #F7471F);
    justify-content: center;
    align-items: center;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
}
.btn-defalt {
    background: #fff !important;
    font-size: 26rpx;
    width: auto;
    margin: 0;
    padding: 0;
    display: inline-block;
    padding:5rpx 20rpx;
    border:1rpx solid #F75330;
    border-radius:50rpx;
    color:#F75330;
}

.btn-defalt::after{ border: none; }
.order-item-wrapper {
    display: flex;
    justify-content: flex-start;
    padding:5rpx 0 5rpx 30rpx;
    align-items: center;
}
.order-item-wrapper .order-left {
    width: 120rpx;
    text-align: justify;
}