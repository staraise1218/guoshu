.item_box {
    position: fixed;
    left: 0;
    top: 50rpx;
    width: 100%;
    height: 100vh;
}
.item_box .list-item {
    border-bottom: 20rpx solid rgba(0,0,0,.05);
}
.item_box .tips {
    line-height: 4em;
    padding-bottom: 50rpx;
    text-align: center;
}

.item_box .item-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.1)
}
.item_box .goods-list {
    padding: 20rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
    display: flex;
}
.item_box .goods-list .goods-item {
    margin-right: 10rpx;
}
.item_box .goods-list .goods-item .title-name {
    height: 50rpx;
    line-height: 50rpx;
    width: 200rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.item_box .goods-list .goods-item .goods-poster {
    width: 200rpx;
    height: 200rpx;
}
.item_box .user-info {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 10rpx 20rpx 10rpx 20rpx;
}
.item_box .user-info .user-phone {
    margin-left: 50rpx;
}
.item_box .address {
    padding: 0 20rpx 20rpx 20rpx;
    width: 100%;
    box-sizing: border-box;
}