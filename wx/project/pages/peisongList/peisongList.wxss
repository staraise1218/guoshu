page {
    padding-bottom: 100rpx;
    font-size: 26rpx;
}
.topBar {
    position: fixed;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    width: 100%;
    font-size: 26rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.1);
    padding-bottom: 20rpx;
    background: #fff;
    z-index: 1;
}
.topBar .topbar-item {
    flex: 1;
    text-align: center;
}

.topBar .active {
    position: relative;
}
.topBar .active::before {
    display: block;
    content: '';
    width: 100rpx;
    height: 4rpx;
    background: red;
    position: absolute;
    bottom: -20rpx;
    left: 50%;
    transform: translateX(-50%);
}

.empty {
    width: 300rpx;
    height: 300rpx;
    position: fixed;
    /* left: 50%;
    top: 50%; */
    /* transform: translate(-50%, -50%); */
    margin-top: 200rpx;
    margin-left: 50%;
    transform: translateX(-50%)
}
