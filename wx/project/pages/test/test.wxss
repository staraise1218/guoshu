.item{
    width:calc(50% - 15px);
    float:left;
    box-sizing: border-box;
    
    border:1px solid #ddd;
  }
  .item:nth-child(2n){
    margin:10px 10px 0px 10rpx;
  }
  .item:nth-child(2n+1){
    margin:10px 10rpx 0px 10px;
  }
  .image{
    width:100%;
    height:50vw;
  }
  .text{
    font-size:13px;
    line-height:16px;
   display: -webkit-box;    
    -webkit-box-orient: vertical;    
    -webkit-line-clamp: 2;    
    overflow: hidden;
    margin:5px;
  }
  .bottom_container{
    display: flex;
    display: -webkit-flex;
    align-items: center;
    justify-content:space-between;
    -webkit-align-items: center;
    -webkit-justify-content:space-between;
    margin:10px 5px;
  }
  .price{
    color:rgb(255, 0, 0);
  }
  .add{
    width:24px;
    height:24px;
    margin-right:5px;  
  }
  .shopcart{
    position:fixed;
    width:40px;
    height:40px;
    bottom:100px;
    right:20px;
    border-radius: 50%;
    background:rgba(0,0,0,.2);
    display: flex;
    align-items: center;
    justify-content: center;
  
    z-index:5;
  }
  .shopcart_icon{
    width:80%;
    height:80%;
  
  }
  .ghost{
    position: fixed;
    
    z-index:1;
    transition:all .04s linear;
  }
  .ghost_img{
    width:100%;
    height:100%;
  
  }
  .shopcart_num{
    color:red;
    font-size:11px;
    position:absolute;
    top:-4px;
    right:-4px;
    width:16px;
    height:16px;
    text-align: center;
    line-height:18px;
    border-radius: 50%;
    background:red;
    color:#fff;
  }