page {
  padding-bottom: 100rpx;
  padding-top: 80rpx;
}
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 99;
  width: 100%;
}
.address {
  white-space: nowrap;
  overflow: hidden;
  max-width: 260rpx;
  text-overflow: ellipsis;
}
.news-icon {
  height: 35rpx !important;
}
.search {
  position: relative;
  background: #F6F6F6;
  border-radius: 30rpx;
  /* width: 230rpx; */
  width: 100%;
  font-size: 22rpx;
  padding: 5rpx 20rpx 5rpx 60rpx;
}
.search::before {
  display: block;
  content: '';
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  background-image: url('http://img.hb.aicdn.com/2428f6e809e53942c9be02543a31d0c59b3f7a286b0-2jNZQl_fw658');
  background-size: cover;
  background-repeat: no-repeat;
}
.wrap {
  display: flex;
  justify-content: flex-start;
}

.left-bar {
  background: #F6F6F6;
  font-size: 28rpx;
  height: 100%;
  width:200rpx;
  height:100vh;
  position: fixed;
  left: 0;
  top: 82rpx;
}
.left-bar .left-item {
  padding: 20rpx 0rpx;
  text-align: center;
  border-left: 5rpx solid #F6F6F6;
  white-space: nowrap;
}
.left-bar .left-item.active {
  font-weight: 600%;
  border-left: 5rpx solid #F8471E;
  background: #fff;
  font-weight: 600;
}
.con {
  flex: 1;
  margin-left: 200rpx;
}
.scro-wrap {
  white-space:nowrap;
  font-size:22rpx;
  color:rgba(0,0,0,0.5);
  border-bottom:1rpx solid rgba(0,0,0,0.1);
  margin:0 auto;
  position:fixed;
  right:0;
  top:70rpx;
  z-index:98;
  width:550rpx;
  background:#fff;
  height:85rpx;
  line-height:60rpx;
  
}
.tab-item {
  display: inline-block;
  padding: 20rpx 30rpx;
}
.tab-active {
  font-weight: 600;
  color: #F8471E;
}
.title-3_f {
  color: rgba(0,0,0,0.5);
}
.title {
  font-size: 26rpx;
}
.box-1 {
  padding-top: 50rpx;
}

.right-center {
  flex: 1;
  margin-left: 20rpx;
}
.scro-con .title-2 {
  overflow: hidden;
  white-space: nowrap;
  width: 320rpx;
}
.scro-con .title-3_f {
  overflow: hidden;
  white-space: nowrap;
  width: 320rpx;
}






/* ================= 
 *  选择城市相关
 * ==================
 */
 .city-btn {
  display: flex;
  justify-content: space-between;
  background: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.city-box {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
}

.box {
  width: 100%;
  height: 100vh;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  z-index: 999;
}
.list-item {
  position: relative;
}

.shopping-alert {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 9;
}
.shopping-alert .alert-con {
  border-radius: 20rpx;
  padding: 20rpx 10rpx;
  background: rgba(0,0,0,.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  flex-direction: column;
  font-size: 22rpx;
}
.alert-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 998;
}