 .city-btn {
  display: flex;
  justify-content: space-between;
  background: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.city-box {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
}

.box {
  width: 100%;
  height: 100vh;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  z-index: 999;
}
.list-item {
  position: relative;
}

.shopping-alert {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  z-index: 9;
}
.shopping-alert .alert-con {
  border-radius: 20rpx;
  padding: 20rpx 10rpx;
  background: rgba(0,0,0,.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  flex-direction: column;
  font-size: 22rpx;
}
.alert-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 998;
}

.location-icon {
  width: 38rpx;
  height: 38rpx;
}


  /* 选择城市弹窗 */
  .alert-box_ {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.5);
    z-index: 998;
  }
  .cityshow-alert {
    position: fixed;
    left: 49.5%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 999;
    background: #fff;
    display: flex;
    width: 95%;
    height: 800rpx;
    border-radius: 15rpx;
    overflow: hidden;
  }
  .cityshow-alert .left, 
  .cityshow-alert .center, 
  .cityshow-alert .right {
    flex: 1;
    font-weight: 400;
    font-size: 22rpx;
    text-align: center;
    height: 720rpx;
    padding-bottom: 40rpx;
  }
  .cityshow-alert .content {
    line-height: 60rpx;
    border-left: 10rpx solid transparent;
    box-sizing: border-box;
    text-align: center;
  }
  .cityshow-alert .active {
    background: #eee;
    border-left: 10rpx solid #FC5453
  }
  
  .city-btn_ {
    position: fixed;
    bottom: 20rpx;
    left: 50%;
    transform: translate(-50%, 0);
    width: 200rpx;
    background: rgba(0,200,0,1);
    z-index: 999;
    color: #fff;
    text-align: center;
    font-size: 26rpx;
    border-radius: 10rpx;
    padding: 20rpx;
    margin: 0;
  }
  .btn-wrapper {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    font-size: 32rpx;
    border-top: 1rpx solid rgba(0,0,0,.1);
  }
  .btn-wrapper view {
    text-align: center;
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
  }
  .btn-wrapper .cancel {
    background: #eee;
  }
  .btn-wrapper .ok {
    background: #FF8A00;
    color: #fff;
  }