.search {
  position: relative;
  background: #F6F6F6;
  border-radius: 30rpx;
  width: 230rpx;
  font-size: 22rpx;
  padding: 5rpx 20rpx 5rpx 60rpx;
}
.search::before {
  display: block;
  content: '';
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  background-image: url('http://img.hb.aicdn.com/2428f6e809e53942c9be02543a31d0c59b3f7a286b0-2jNZQl_fw658');
  background-size: cover;
  background-repeat: no-repeat;
}
.wrap {
  display: flex;
  justify-content: flex-start;
}

.left-bar {
  background: #F6F6F6;
  font-size: 28rpx;
  height: 100%;
}
.left-bar .left-item {
  padding: 20rpx 60rpx;
  text-align: center;
  border-left: 5rpx solid #F6F6F6;
  white-space: nowrap;
}
.left-bar .left-item.active {
  font-weight: 600%;
  border-left: 5rpx solid #F8471E;
  background: #fff;
  font-weight: 600;
}
.con {
  flex: 1;
}
.scro-wrap {
  white-space: nowrap;
  font-size: 22rpx;
  color: rgba(0,0,0,0.5);
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
  width: 95%;
  margin: 0 auto;
}
.tab-item {
  display: inline-block;
  padding: 20rpx 30rpx;
}
.tab-active {
  font-weight: 600;
  color: #F8471E;
}
.title-3_f {
  color: rgba(0,0,0,0.5);
}
.title {
  font-size: 26rpx;
}




/* ================= 
 *  选择城市相关
 * ==================
 */
 .city-btn {
  display: flex;
  justify-content: space-between;
  background: #fff;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

.city-box {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff;
}

.box {
  width: 100%;
  height: 100vh;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
}
