                            <view class="price">{{item.shop_price}}</view>
                      </view>
                      <view class="price-2">
                            <view class="">￥{{item.market_price}}</view>
                      </view>
                    </view>
                    <view class="right">
                        <image lazy-load="true" data-img="https://app.zhuoyumall.com{{item.original_img}}"
                          style="width: 50rpx"
                          mode="widthFix"
                          catchtap="{{item.store_count == 0 ? '' : 'addCart'}}" 
