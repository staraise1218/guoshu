              <view class="list-item between-center  padding-b-30 border-bottom" bindtap="{{item.store_count == 0 ? '' : 'toCon'}}" data-goods-id="{{item.goods_id}}">
                <image class="icon-poster" src="{{item.original_img}}" mode="" />
