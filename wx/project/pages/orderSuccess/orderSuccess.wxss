.gray {
    background: rgba(0,0,0,0.05);
    padding: 40rpx 0;
    text-align: center;
}
.item-poster {
    width: 200rpx;
    height: 200rpx;
}
.right {
    flex: 1;
    margin-left: 20rpx;
    justify-content: flex-start;
}
.item-con {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.bottom {
    margin: 30rpx;
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin: 0;
    margin-top: 30rpx;
}
.pay {
    color: #F93910;
    font-size: 32rpx;
    margin: 30rpx;
    padding: 10rpx 30rpx;
    border-radius: 50rpx;
    border: 1rpx solid #F93910;
}


.cancel {
    color: rgba(0,0,0,0.8);
    font-size: 32rpx;
    margin: 30rpx 0;
    padding: 10rpx 30rpx;
    border-radius: 50rpx;
    border: 1rpx solid rgba(0,0,0,0.8);
}



.toHome {
    position: fixed;
    right: 50rpx;
    bottom: 200rpx;
    background: rgba(0,0,0,0.5);
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    line-height: 66rpx;
}
.toHome image {
    width: 40rpx;
    height: 40rpx;
}








