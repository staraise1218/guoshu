page {
    background: rgba(0,0,0,0.05);
}
.list-item {
    margin: 30rpx;
    padding: 30rpx;
    background: #fff;
    border-radius: 20rpx;
}
.list-item .top {
    display: flex;
    justify-content: space-between;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}
.tag {
    font-size: 22rpx;
    border: none;
    padding: 5rpx 12rpx;
    height: auto;
    align-self: flex-start;
}
.list-item .left {
    display: flex;
}
.list-item .left .price {
    display: flex;
}
.list-item .left .price .fuhao {
    display: flex;
    flex-direction: column;
    height: 80rpx;
    justify-content: flex-end;
}
.list-item .left .middle {
    margin-left: 20rpx;
}




.list-item.active .tag {
    background: #F4AFA0;
    color: #F72F03;
}
.list-item.over .tag {
    background: #E3E3E3;
    color: #838383;
}
.list-item.over .price {
    color: #838383;
}
.list-item.over .title-3 {
    color: #838383;
}