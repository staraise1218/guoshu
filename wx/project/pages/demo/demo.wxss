page {
    padding-bottom: 120rpx;
}
.order-top {
    position: relative;
    padding-right: 120rpx;
}
.order-top::before {
    content: "";
    display: block;
    width: 70rpx;
    height: 70rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    background-image: url('http://img.hb.aicdn.com/3bc04df372e9e3f66421a5573743687437b517954fb-sgjpU5_fw658');
    background-size: cover;
    background-repeat: no-repeat;
}

.list .right {
    align-self: flex-start;
}



.poster-image {
  width: 250rpx;
  height: 250rpx;
}

.icon-3 {
  width: 30rpx;
  height: 40rpx;
}


.footer {
    position: fixed;
    bottom: 0;
    border-top: 1rpx solid rgba(0,0,0,0.05);
    background: #fff;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.footer .sub {
    background: #F8471E;
    color: #fff;
    width: 200rpx;
    text-align: center;
    padding: 30rpx;
}



.picker-item {
    width: 80%;
    height: 50rpx;
    border: 1rpx solid red;
    margin: 0 auto;
}




.address-wrapper {
    padding: 30rpx;
    font-size: 28rpx;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
}
.address-wrapper .left {
    /* padding-top: 8rpx; */
    padding-right: 10rpx;
}
.address-wrapper .right {
    margin-left: 10rpx;
    align-self: flex-start
}
.address-wrapper .user-info {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.address-wrapper .user-info image {
    vertical-align: middle;
    align-self: center
}
.address-wrapper .user-info .phone {
    margin-left: 10rpx;
}
.address-wrapper .address-info .address-name {
    margin-top: 8rpx;
    width: 100%;
}
.address-wrapper .address-info .address-connent {
    color: #9D9D9D;
    font-size: 22rpx;
    margin-top: 6rpx;
}
.tips {
    font-size: 20rpx;
}






page .wallets-password {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    z-index: 999;
  }
  
  page .wallets-password .input-content-wrap {
    position: absolute;
    top: 200rpx;
    left: 50%;
    display: flex;
    flex-direction: column;
    width: 600rpx;
    margin-left: -300rpx;
    background: #fff;
    border-radius: 20rpx;
  }
  
  page .wallets-password .input-content-wrap .top {
    display: flex;
    align-items: center;
    height: 90rpx;
    border-bottom: 2rpx solid #ddd;
    justify-content: space-around;
  }
  
  page .wallets-password .input-content-wrap .top .close {
    font-size: 44rpx;
    color: #999;
    font-weight: 100;
  }
  
  page .wallets-password .input-content-wrap .top .forget {
    color: #00a2ff;
    font-size: 22rpx;
  }
  
  page .wallets-password .input-content-wrap .actual_fee {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #000;
    height: 100rpx;
    margin: 0 23rpx;
    border-bottom: 2rpx solid #ddd;
  }
  
  page .wallets-password .input-content-wrap .actual_fee span {
    font-size: 24rpx;
  }
  
  page .wallets-password .input-content-wrap .actual_fee text {
    font-size: 36rpx;
  }
  
  page .wallets-password .input-content-wrap .input-password-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 150rpx;
  }
  
  page .wallets-password .input-content-wrap .input-password-wrap .password_dot {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #000;
    box-sizing: border-box;
    width: 90rpx;
    height: 90rpx;
    border: 2rpx solid #ddd;
    border-left: none 0;
  }
  
  page .wallets-password .input-content-wrap .input-password-wrap .password_dot:nth-child(1) {
    border-left: 2rpx solid #ddd;
  }
  
  page .wallets-password .input-content-wrap .input-password-wrap .password_dot i {
    background: #000;
    border-radius: 50%;
    width: 20rpx;
    height: 20rpx;
  }
  
  page .wallets-password .input-content {
    position: absolute;
    opacity: 0;
    left: -100%;
    top: 600rpx;
    background: #f56;
    z-index: -999;
  }
  
  page .wallets-password .input-content.active {
    z-index: -99;
  }
  



.alert-error-wrapper {
  width: 100%;
  height: 100vh;
  background: rgba(0,0,0,.5);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.alert-error-wrapper .alert-error-content {
  background: #fff;
  margin-top: 350rpx;
  padding: 20rpx;
  border-radius: 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #F8471E;
  font-size: 28rpx;
}
.alert-error-wrapper .alert-error-content image {
  width: 200rpx;
  height: 100rpx;
}
.error-msg {
  margin-top: 20rpx;
}



/* 自提点弹窗 */
.alert-zitidian {
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0,0,0,.5);
  z-index: 999;
}
.alert-zitidian .content {
  /* padding: 20rpx; */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 550rpx;
  background: #fff;
  border-radius: 14rpx;
  overflow: hidden;
}
.alert-zitidian .content image {
  width: 40rpx;
  height: 40rpx;
  /* border-radius: 50%; */
}
.alert-zitidian .content .right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.alert-zitidian .content .list-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx ;
  border-bottom: 1rpx solid rgba(0,0,0,.05);
}
.alert-zitidian .content .active {
  background: rgba(255, 214, 52,.5);
}
.alert-zitidian .content .list-item:last-child {
  border: none;
}
.alert-zitidian .content .center {
  flex: 1;
  padding: 0 20rpx;
}
.alert-zitidian .content .center .name {
  font-size: 28rpx;
}
.alert-zitidian .content .center .con {
  font-size: 22rpx;
  color: rgba(0,0,0,.5);
}
.alert-zitidian .content .right {
  font-size: 24rpx;
}
.active_self {
  background: #eee;
}