page {
    height: 100vh;
    width: 100%;
}
.topbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 99;
    background: #fff;
    height: 80rpx;
    line-height: 80rpx;
}
.topbar::before {
    content: "";
    display: block;
    width: 100%;
    height: 20rpx;
    background: #eee;
    position: absolute;
    bottom: -19rpx;
}
.tab-item  {
    font-size: 28rpx;
}
.tab-item.tab-active {
    position: relative;
    color: #F93004;
}
.tab-item.tab-active::before {
    content: "";
    display: block;
    width: 100%;
    height: 5rpx;
    border-radius: 5rpx;
    background: #F93004;
    position: absolute;
    bottom: -0%;
}
