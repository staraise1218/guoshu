.tab-item  {
    font-size: 28rpx;
}
.tab-item.tab-active {
    position: relative;
    color: #F93004;
}
.tab-item.tab-active::before {
    content: "";
    display: block;
    width: 100%;
    height: 5rpx;
    border-radius: 5rpx;
    background: #F93004;
    position: absolute;
    bottom: -100%;
}
