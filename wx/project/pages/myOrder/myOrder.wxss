.alert-bg {
    background: rgba(0,0,0,.5);
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    z-index: 998;
}
.alert-pay {
    width: 400rpx;
    /* height: 500rpx; */
    background: #fff;
    border-radius: 10rpx;
    position: fixed;
    left: 50%;
    top: 50%;
