<!-- 全选按钮 -->
<view class="title-2 border-bottom padding-20 left-center">
    <image bindtap="chooseAll" wx:if="{{chooseAllShow}}" class="icon-2"
        src="https://hbimg.huabanimg.com/af0f6c8f8b4ba1608f1985fd5c491db279dd940c6cf-efCOPl_fw658" />
    <image bindtap="chooseAll" wx:else class="icon-2"
        src="https://hbimg.huabanimg.com/af41d36cf3423f49b5180fab5f14f2b3db82652a67e-dDcFEg_fw658" />
    <view class="margin-left-20 left-center" bindtap="chooseAll">全选</view>
</view>
<!-- 全选按钮 END -->
<!-- 购物车没有商品提示 -->
<view class="load-shopcart" wx:if="{{load_shopcart == 1}}">
    <view class="container" wx:if="{{orderList.length == 0}}">
        <image class="shopcart-image" src="https://app.zhuoyumall.com:444/wx/img/购物车页面无商品插图.png" />
        <view class="text-center">购物车中还没有商品</view>
    </view>
    <view wx:else>
        <!-- 购物车商品 -->
        <block wx:for="{{orderList}}" wx:key>
            <view class="shop-cart-item title-2 border-bottom padding-20 left-center" data-id="{{item.goods_id}}"
                data-cat-id="{{item.cat_id}}">
                <view catchtap="choose" data-index="{{index}}">
                    <image wx:if="{{item.selected == 1}}" class="icon-2"
                        src="https://hbimg.huabanimg.com/af0f6c8f8b4ba1608f1985fd5c491db279dd940c6cf-efCOPl_fw658" />
                    <image wx:else class="icon-2"
                        src="https://hbimg.huabanimg.com/af41d36cf3423f49b5180fab5f14f2b3db82652a67e-dDcFEg_fw658" />
                </view>
                <view class="right">
                    <view class="shop-img-wrap">
                        <image mode="widthFix" src="{{item.goods.original_img}}" />
                    </view>
                    <view class="info">
                        <view class="title-2">{{item.goods_name}}</view>
                        <view class="title-2">{{item.subtitle}}</view>
                        <view class="info-bottom">
                            <view class="price">￥{{item.goods_price}}
                                <view class="tag font-size-18 margin-left-10">{{item.goods.tag}}</view>
                            </view>
                            <view class="num-box" bindtap="ctrl">
                                <view class="reduce" data-msg="reduce" data-goodsid="{{item.goods_id}}"
                                    data-cat-id="{{item.cat_id}}">-</view>
                                <view class="num">{{item.goods_num}}</view>
                                <view class="add" 
                                    data-msg="add" 
                                    data-goodsid="{{item.goods_id}}" 
                                    data-store-count="{{item.store_count}}"
                                    data-goods-num="{{item.goods_num}}"
                                    data-cat-id="{{item.cat_id}}">+</view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </block>
        <!-- 购物车商品 END -->
    </view>
        <!-- 推荐商品 -->
        <view class="tuijian-bg">
            <view class="title margin-left-30 margin-bottom-30">推荐商品</view>
            <scroll-view scroll-x class="commodisyScro">
                <block wx:for="{{tuijian}}" wx:key>
                    <view wx:if="{{item.store_count !=0}}" class="src-item" data-goodsid="{{item.goods_id}}">
                        <view catchtap="{{ item.store_count == 0 ? '' : 'go' }}" data-id="{{item.goods_id}}">
                            <image class="poster" src="https://app.zhuoyumall.com:444{{item.original_img}}" />
                        </view>
                        <view class="title-2">{{item.goods_name}}</view>
                        <view class="title-2_f">{{item.subtitle}}</view>
                        <view class="title-2_f">
                            <view wx-if="{{item.virtual_num != 0}}">已购 {{item.virtual_num}} 份</view>
                        </view>
                        <view class="bottom">
                            <view class="price">￥{{item.shop_price}}</view>
                            <view data-goodsid="{{item.goods_id}}"
                                bindtap="{{item.store_count == 0 ? '' : 'addShopCart'}}">
                                <image
                                    src="https://hbimg.huabanimg.com/ff8af7f0827e85d34cc15b364ff139c61e6fe5bc5b3-0QRyv2_fw658"
                                    class="icon-2 shopCartIcon" />
                            </view>
                        </view>
                        <view class="shopping-alert" wx:if="{{item.store_count == 0}}">
                            <view class="alert-con">
                                <view>抢光啦</view>
                                <view>SOLD OUT</view>
                            </view>
                        </view>
                    </view>
                </block>
            </scroll-view>
        </view>
        <!-- 推荐商品 END -->

</view>
<!-- 购物车没有商品提示 END -->
<!-- 结算部分 -->
<view class="toPay">
    <view class="left left-center">
        <!-- <image wx:if="{{true}}" class="icon-2 margin-right-20" src="/src/img/椭圆1拷贝8@2x.png" />
        <image wx:else class="icon-2 margin-right-20" src="/src/img/组161@2x.png" />
        全选 -->
        <view class="heji margin-left-20">
            <view class="heji-title">合计: <view class="price">￥{{total_fee}}</view>
            </view>
            <view class="title-2_f margin-top-10">配送费￥0</view>
        </view>
    </view>
    <view class="right" bindtap="toPay">去结算({{cartList.length}})</view>
</view>
<!-- 结算部分 END -->





<!-- 弹窗 -->
<view class="my_alert_bg" wx:if="{{my_error_alert_show}}" bindtap="close_my_alert"></view>
<view class="my_alert" wx:if="{{my_error_alert_show}}">
    <view class="my_title">{{my_alert_title}}</view>
    <view class="my_con">{{alert_errorMsg}}</view>
    <view class="my_btn">
        <view class="my_cancel" bindtap="my_alert_cancel">{{cancel}}</view>
        <view class="my_ok" bindtap="my_alert_ok">{{ok}}</view>
    </view>
</view>