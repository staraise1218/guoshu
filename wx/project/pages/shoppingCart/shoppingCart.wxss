.right {
    width: 100%;
    display: flex;
    justify-content: left;
    margin-left: 15rpx;
}
.right .info {
    width: 100%;
    margin-left: 15rpx;
}
.right .info .info-bottom {
    display: flex;
    justify-content: space-between;
    margin-top: 40rpx;
}
.right .info .info-bottom .num-box {
    display: flex;
}
.right .info .info-bottom .num-box .reduce {
    border: 1rpx solid rgba(0,0,0,0.1);
    color: #F8461D;
    line-height: 50rpx;
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    font-size: 60rpx;
}
.right .info .info-bottom .num-box .num {
    border: 1rpx solid rgba(0,0,0,0.1);
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    padding: 0 17rpx;
}
.right .info .info-bottom .num-box .add {
    border: 1rpx solid rgba(0,0,0,0.1);
    color: #fff;
    width: 50rpx;
    text-align: center;
    font-size: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #F8461D;
}








