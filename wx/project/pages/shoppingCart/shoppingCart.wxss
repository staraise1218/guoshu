.shop-img-wrap {
    position: relative;
    width: 165rpx;
    height: 130rpx;
}
.shop-img-wrap image {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    max-width: 100%;
    max-height: 100%;
}




