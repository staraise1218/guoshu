.toPay {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    background: #fff;
    border-top: 1rpx solid rgba(0,0,0,0.1);
}
.toPay .right {
    display: flex;
    justify-content: center;
    width: 300rpx;
    align-items: center;
    background: #F8461D;
    color: #fff;
    text-align: center;
}
.toPay .left {
    white-space: nowrap;
    padding:10rpx 0 10rpx 30rpx;
}
.heji-title {
    display: flex;
    align-items: center;
    font-size: 32rpx;
}



