.shopping-alert {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 9;
  }
.shopping-alert .alert-con {
    border-radius: 20rpx;
    padding: 20rpx;
    background: rgba(0,0,0,.5);
    display: flex;
    align-items: center;
