page {
    padding-bottom: 120rpx;
}

.okBtn {
    width: 95%;
    padding: 20rpx;
    border-radius: 15rpx;
    background: linear-gradient(#ff3c64, #F7471E);
    box-sizing: border-box;
    text-align: center;
    color: #fff;
    margin: 0 auto;
    font-size: 28rpx;
    position: fixed;
    bottom: 20rpx;
    left: 2.5%;
}




.list-wrap {
    padding: 30rpx 20rpx;
    display: flex;
    justify-content: flex-start;
    border-bottom: 1px solid rgba(0,0,0,.1);
}
.list-wrap .left {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}
.list-wrap .left image {
    max-width: 100%;
    max-height: 100%;
}
.list-wrap .right {
    flex: 1;
    margin-left: 20rpx;
    font-size: 20rpx;
}
.list-wrap .right .title {
    font-weight: 400;
    display: flex;
    justify-content: space-between;
}
.list-wrap .right .name {
    color: #222;
    font-size: 28rpx;
}
.list-wrap .right .juli {
    color: #ff3c64;
    font-size: 24rpx;
}
.list-wrap .right .con {
    font-size: 22rpx;
    color: rgba(0,0,0,.8);
    margin-top: 10rpx;
}
.active {
    background: rgba(247, 72, 31, .3)
}

.empty-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 200rpx;
    font-size: 26rpx;
    color: rgba(0,0,0,.5)
}
.empty-wrap image {
    width: 200rpx;
    height: 160rpx;
    margin-bottom: 30rpx;
}