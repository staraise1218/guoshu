page {
    background: #F6F6F6;
    font-size: 28rpx;
}

.news-wrap {
    margin: 20rpx 30rpx;
    background: #fff;
    border-radius: 10rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.news-wrap .news-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid rgba(0, 0, 0, .05);
    padding: 0 0 20rpx 0;
    color: #222;

}

.news-wrap .news-title .right {
    color: rgba(0, 0, 0, .35)
}

.news-wrap .news-title view {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.conent {
    padding: 15rpx 0 0 0;
    color: rgba(0, 0, 0, .5);
    font-size: 24rpx;
    line-height: 38rpx;
}

.time-wrap {
    display: flex;
    justify-content: center;
    margin-top: 20rpx;
}

.time-wrap .time {
    color: #fff;
    background: rgba(0, 0, 0, .1);
    padding: 5rpx 20rpx;
    font-size: 22rpx;
    border-radius: 20rpx;
}







.my_alert_bg {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 998;
}

.my_alert {
    background: #fff;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 999;
    border-radius: 15rpx;
    min-width: 500rpx;
}

.my_title {
    text-align: center;
    padding: 20rpx;
}

.my_con {
    padding: 10rpx 20rpx;
    /* min-height: 150rpx; */
    color: rgba(0, 0, 0, .5)
}

.my_btn {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* border-top: 1rpx solid rgba(0, 0, 0, .5); */
    padding: 20rpx;
}

.my_btn view {
    flex: 1;
    text-align: center;
}

.my_ok {
    color: #38f;
}
.cancel {
    border: 1px solid #f40;
    border-radius: 15rpx;
    padding: 6rpx 20rpx;
    color: #f40;
}
.active {
    color: #f40;
}