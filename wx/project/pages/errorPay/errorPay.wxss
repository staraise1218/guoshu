.content {
    width: 100%;
    height: 100vh;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.content .top {
    margin-top: 100rpx;
    width: 500rpx;
}
.content .top image {
    width: 100%;
}

.content .btn {
    background: #EA5B3D;
    color: #fff;
    width: 200rpx;
    font-size: 28rpx;
    border-radius: 4rpx;
    padding: 10rpx 0;
    margin: 20rpx;
}











.toIndex {
    width: 95%;
    font-size: 32rpx;
    color: #fff;
    background: linear-gradient(#F67457, #F8481F);
    border: none;
    margin-top: 50rpx;
}
.toIndex:last-child {
    margin-top: 20rpx;
    background: linear-gradient(#9FD8F6, #00A0E8);
}
.toOrder {
    width: 95%;
    font-size: 32rpx;
    color: #222;
    background: #fff;
    margin-top: 30rpx;
    border: 1rpx solid #999;
}
.title-2_ {
    font-size: 45rpx;
}




.border-bottom {
    border-bottom: 1rpx solid rgba(0,0,0,.1);
}











