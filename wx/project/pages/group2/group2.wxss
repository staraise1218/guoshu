page {
    font-size: 28rpx;
}


/* Poster */
.poster-wrap {
    height: 200rpx;
}

/* Miaosa */
.miaosa {
    /* padding: 0 20rpx; */
    border-bottom: 20rpx solid #F3F3F3
}
.miaosa .miaosa-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    font-size: 32rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.4);
    padding: 0 20rpx;
    box-sizing: border-box;
} 
.miaosa  .miaosa-top .left {
    display: flex;
    align-items: center;
}
.miaosa .miaosa-top .left image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 15rpx;
}
.miaosa .miaosa-top .right {
    display: flex;
}
.miaosa .miaosa-top .right > view {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 4rpx 40rpx;
    background: #EBEBEB;
    border-top-left-radius: 15rpx;
    border-top-right-radius: 15rpx;
    font-size: 24rpx;
}
.miaosa .miaosa-top .right > view > view:last-child {
    font-size: 22rpx;
    margin-top: 2rpx;
}
.miaosa .miaosa-top .right .active {
    background: #FF4E76;
    color: #fff;
}
.miaosa .miaosa-con {
    height: 405rpx;
}
.miaosa .miaosa-con .miaosa-scr {
    white-space: nowrap;
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item {
    display: inline-block;
    /* border: 1px solid red; */
    margin-left: 30rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item .goods_name {
    color: rgba(0,0,0,.8);
    font-size: 24rpx;
    width: 200rpx;
    height: 35rpx;
    line-height: 35rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item .goods_name_ {
    color: rgba(0,0,0,.6);
    font-size: 22rpx;
    width: 200rpx;
    height: 35rpx;
    line-height: 35rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item .ctr {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    padding-left: 22rpx;
    margin-top: 30rpx;
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item .ctr image {
    width: 25rpx;
    height: 25rpx;
    position: absolute;
    bottom: 5rpx;
    left: 0;
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item .ctr .miaosa_price {
    color: #FF4E76;
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item .ctr .left {
    display: flex;
    align-items: flex-end
}
.miaosa .miaosa-con .miaosa-scr .miaosa-item .ctr .right-btn {
    border: 2rpx solid #FF4E76;
    color: #FF4E76;
    border-radius: 25rpx;
    padding: 4rpx 15rpx;
    font-size: 18rpx;
}

/* Group */
.group .group-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    font-size: 22rpx;
    color: rgba(0,0,0,.5);
    border-bottom: 1rpx solid rgba(0,0,0,.5);
}
.group .group-top .left {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: rgba(0,0,0,.8);
}
.group .group-top .left > view {
    margin-left: 20rpx;
    font-size: 32rpx;
}
.group .group-top .right {
    display: flex;
    align-items: flex-end;
    margin-bottom: 15rpx;
}
.group .group-top .big-pric {
    color: #FF4E76;
    font-size: 32rpx;
    font-weight: 600;
}
.group .group-list .list-item {
    padding: 30rpx;
    border-bottom: 1rpx solid rgba(0,0,0,.2);
    display: flex;
    justify-content: space-between;
}
.group .group-list .list-item .goods_pic {
    width: 200rpx;
    height: 200rpx;
}
.group .group-list .list-item .right {
    flex: 1;
    margin-left: 20rpx;
}
.group .group-list .list-item .right .goods_name {
    color: rgba(0,0,0,.7);
}
.group .group-list .list-item .right .goods_name_ {
    color: rgba(0,0,0,.5);
    font-size: 20rpx;
}
.group .group-list .list-item .right .ctr {
    margin-top: 45rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.group .group-list .list-item .right .ctr .ctr-left .goods_price {
    position: relative;
    padding-left: 16rpx;
    color: #3C7CED;
    font-weight: 600;
}
.group .group-list .list-item .right .ctr .ctr-left .goods_price .RMB {
    position: absolute;
    left: 0;
    bottom: 8rpx;
}
.group .group-list .list-item .right .ctr .ctr-left .goods_price_del {
    color: rgba(0,0,0,.5);
    text-decoration: line-through;
    font-size: 18rpx;
}
.group .group-list .list-item .right .ctr .ctr-right {
    background: #3C7CED;
    color: #fff;
    border-radius: 30rpx;
    padding: 16rpx 42rpx;
    color: #fff;
    font-size: 24rpx;
}