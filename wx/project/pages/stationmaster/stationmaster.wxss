.container {
    width: 100%;
    background-image: url('https://hbimg.huabanimg.com/2c393cc5e7aa9bd3a2d56f0b9d5a510d4d8dee5d43fe-E1bCjo_fw658');
    background-size: contain;
    height: 100vh;
    background-repeat: no-repeat;
}

.box-con {
    width: 75%;
    margin: 0 auto;
    background: #fff;
    padding: 60rpx;
}

.inp-item {
    margin: 20rpx 0;
    position: relative;
}

.left-box {
    width: 200rpx;
}

.before {
    position: absolute;
    font-size: 22rpx;
    font-weight: 400;
    padding: 20rpx;
}

.right-box {
    width: 100%;
}

.right-box input {
    width: 100%;
    padding-left: 20rpx;
}

.right-box .inp {
    width: 100%;
    padding-left: 20rpx;
}

.okBtn {
    width: 50%;
    color: #fff;
    background: linear-gradient(#F46341, #F8461D);
    text-align: center;
    padding: 18rpx;
    border-radius: 50rpx;
    border: 2rpx solid #F8461E;
    margin: 100rpx auto 20rpx auto;
}

.codeInp {
    width: 50% !important;
    position: absolute;
    z-index: 0;
    left: 170rpx;
    border-left: 1rpx solid rgba(0, 0, 0, 0.1);
}


/* ================= 
 *  选择城市相关
 * ==================
 */
.city-btn {
    display: flex;
    justify-content: space-between;
    background: #fff !important;
    border: 1rpx solid rgba(0, 0, 0, 0.1);
    padding: 20rpx;
}

.city-box {
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    background: #fff;
}

.box {
    width: 100%;
    height: 100vh;
    position: fixed;
    bottom: 0;
    left: 0;
    text-align: center;
    z-index: 99;
}