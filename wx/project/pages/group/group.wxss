    display: flex;
    justify-content: space-between;
    padding: 40rpx;
    border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.tuijian-item .poster-wrap {
    position: relative;
    flex-basis: 260rpx;
}
.tuijian-item .tuijian-poster {
    /* position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%; */
    width: 100%;
}
.tuijian-item .right {
    display: flex;
    flex-direction: column;
    width: 380rpx;
    margin-left: 30rpx;
}
.tuijian-item .right .tuijian-title {
    font-size: 32rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.tuijian-item .right .tuijian-title-f {
    font-size: 28rpx;
    color: rgba(0, 0, 0, 0.8);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.tuijian-item .right .bottom {
    width: 100%;
    align-self: flex-end;
    display: flex;
    justify-content: space-between;
}
.tuijian-item .right .bottom .tag {
    font-size: 26rpx;
    color: #F5522E;
    border: none;
}
.tuijian-item .right .bottom .toPay {
    align-self: flex-end;
    font-size: 26rpx;
    color: #fff;
    background: #F5522E;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
}
.del {
    font-size: 26rpx;
    color: rgba(0, 0, 0, 0.8);
    font-weight: 400;
}




.price-wrap {
    display: flex;
    flex-direction: column;
}










