<view class="line"></view>

<view class="margin-lr-30 padding-tb-30 border-bottom between-center more-0">
    <view class="title-3">头像</view>
    
    <view class="icon-1 margin-right-50">
        <image class="" style="width: 100%" mode="widthFix" bindtap="changHeaderPic" src="https://app.zhuoyumall.com:444{{head_pic}}" />
    </view>
</view>


<view class="margin-lr-30 padding-tb-30 border-bottom between-center more-0">
    <view class="title-3">昵称</view>
    <view class="title-2_f margin-right-50" bindtap="nameAlert">{{nickname}}</view>
</view>


<view class="margin-lr-30 padding-tb-30 border-bottom between-center more-0">
    <view class="title-3">性别</view>
    <view class="title-2_f margin-right-50" bindtap="changSex">{{sex}}</view>
</view>

<modal hidden="{{nameShow}}" title="修改昵称" confirm-text="提交" cancel-text="取消" bindcancel="nameCanCel"
    bindconfirm="nameConFirm">
    <input bindinput='changName' type='text' placeholder="请输入昵称..." auto-focus />
</modal>

