<view style=" padding: 30rpx 0;">
    <view class="text-center" style="margin: 20rpx 0;">
        <image style="width: 100rpx; height: 100rpx;" src="https://app.zhuoyumall.com:444/wx/img/2/HBmart5.png" />
    </view>
    <view class="text-center title-3_">支付成功</view>
</view>

<view class="container">
    <view class="border-bottom" style="padding: 20rpx 30rpx; border-bottom: 1rpx solid #eee">您的支付信息</view>
    <view class="list-item">
        <view>收款平台</view>
        <view>海豹城市仓储超市</view>
    </view>
    <view class="list-item">
        <view>支付方式</view>
        <view>{{payMethod == 'wxpay' ? '微信支付' : '余额支付'}}</view>
    </view>
    <view class="list-item">
        <view>支付金额</view>
        <view class="right">
            <view>￥</view>
            <view class="price">{{order_amount}}</view>
        </view>
    </view>
</view>



<view class="toHome" bindtap="toHome">返回并浏览其他商品</view>

