page {
    font-size: 26rpx;
}
.my_alert_bg {
    width: 100%;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0,0,0,.5);
    z-index: 998;
}
.my_alert {
    background: #fff;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 999;
    border-radius: 15rpx;
    min-width: 500rpx;
}
.my_title {
    text-align: center;
    padding: 20rpx;
}
.my_con {
    padding: 20rpx;
    min-height: 150rpx;
}
.my_btn {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1rpx solid rgba(0,0,0,.5);
    padding: 20rpx;

}
.my_btn view {
    flex: 1;
    text-align: center;
}
.my_ok {
    color: #38f;
}





































